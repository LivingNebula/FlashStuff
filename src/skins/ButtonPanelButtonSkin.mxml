<?xml version="1.0" encoding="utf-8"?>
<s:SparkSkin xmlns:fx="http://ns.adobe.com/mxml/2009" 
			 xmlns:s="library://ns.adobe.com/flex/spark" 
			 xmlns:fb="http://ns.adobe.com/flashbuilder/2009"
			 xmlns:mx="library://ns.adobe.com/flex/mx">
	
	<fx:Metadata>
		[HostComponent("components.ImageButton")]
	</fx:Metadata>
	
	<s:states>
		<s:State name="up" />
		<s:State name="over" />
		<s:State name="down" />
		<s:State name="disabled" />
	</s:states>
	
	<s:BitmapImage 
		source.up="{hostComponent.getStyle('imageSkin')}"
		source.over="{hostComponent.getStyle('imageSkinOver')}"	
		source.down="{hostComponent.getStyle('imageSkinDown')}"
		source.disabled="{hostComponent.getStyle('imageSkinDisabled')}"
		left="0" right="0" top="0" bottom="0">
	</s:BitmapImage>
	
	<s:Label id="labelDisplay"
			 textAlign="center"
			 fontFamily="xTimes"
			 fontSize="15"
			 fontWeight="bold"
			 verticalAlign="middle"
			 maxDisplayedLines="2"
			 horizontalCenter="{0 + ( hostComponent.getStyle('textHorizontalCenter') as int )}"
			 horizontalCenter.down="{0 + ( hostComponent.getStyle('textHorizontalCenterDown') as int )}"
			 verticalCenter="{0 + ( hostComponent.getStyle('textVerticalCenter') as int )}"
			 verticalCenter.down="{0 + ( hostComponent.getStyle('textVerticalCenterDown') as int )}"
			 rotationX="-40"
			 width="100%"
			 height="100%"
			 left="10" right="10"
			 lineHeight="15">
	</s:Label>
	
</s:SparkSkin>
